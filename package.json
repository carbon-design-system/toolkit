{
  "name": "toolkit-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "license": "Apache-2.0",
  "scripts": {
    "ci-check": "yarn format:diff && yarn lint && yarn test --runInBand",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lerna": "lerna",
    "lint": "eslint packages",
    "precommit": "lint-staged",
    "format": "yarn toolkit format",
    "format:diff": "yarn toolkit format:diff",
    "test": "yarn toolkit test",
    "toolkit": "./packages/toolkit/bin/index.js"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^9.0.0-beta.3",
    "babel-jest": "^23.4.2",
    "eslint": "^5.3.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsdoc": "^3.7.1",
    "fs-extra": "^7.0.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lerna": "^2.9.1",
    "lint-staged": "^7.1.3",
    "prettier": "^1.14.0"
  },
  "toolkit": {
    "plugins": [
      "@carbon/cli-plugin-prettier",
      [
        "@carbon/cli-plugin-jest",
        {
          "testPathIgnorePatterns": [
            "<rootDir>/packages/babel-preset-toolkit/",
            "<rootDir>/test/"
          ]
        }
      ]
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.md": [
      "yarn format",
      "git add"
    ],
    "*.js": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "./packages/eslint-config-toolkit/index.js"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
